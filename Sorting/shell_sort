// Shell Sort
#include  <iostream>
using namespace std;
 
void shellSort(int arr[], int n)
{
    
    for (int diff = n/2; diff > 0; diff /= 2)
   
        // Do a gapped insertion sort for this gap.
        // keep adding one more element until the entire array is sorted gapwise
       
        for (int i = diff; i < n; i += 1)
        {
           
            int temp = arr[i];
 
            
            int j;            
            for (j = i; j >= diff && arr[j - diff] > temp; j -=diff)
                arr[j] = arr[j - diff];
             
          
            arr[j] = temp;
        }
    }
    

 

 
int main()

{   int m[50],n,i;
	cout<<"Hom many Elements , you want to enter:\n";
	cin>>n;								//no. of elements in array user wants to enter
	cout<<"\nEnter the elements:\n";
	for( i=0; i<n; i++ )
	{	
		cin>>m[i];						//taking number as an input from user
	}

	shellSort(m,n);					//call shell_sort function
	cout<<"\nSorted Array:\n";
	for( i=0; i<n; i++)							
	{	
		cout<<m[i]<<"\t";				//display the sorted array
	}
	return 0;
}
